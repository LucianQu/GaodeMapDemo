<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#9FB6CD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/markerWellNameTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="机井名称:"
            />
        <TextView
            android:id="@+id/markerWellName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#050505"
            android:textSize="14sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/markerWellAttrTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="15sp"
            android:text="机井所属:"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/markerWellAttr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#050505"
            android:textSize="14sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/markerWellAdminTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="机井管理员:"
            />
        <TextView
            android:id="@+id/markerWellAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#050505"
            android:textSize="14sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:id="@+id/markerWellLocalTitle"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="机井位置:"
            />
        <TextView
            android:id="@+id/markerWellLocalX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#050505"
            android:textSize="14sp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text=""
            />
        <TextView
            android:id="@+id/markerWellLocalY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#050505"
            android:textSize="14sp"

            />
    </LinearLayout>



</LinearLayout>